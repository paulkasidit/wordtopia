<h1>Update a word here</h1>

<h3>Update <%= @word.word %></h3>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_edit">Edit word:</label>
  <input id="word_edit" name="word_edit" type="text" required>

  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete word</button>
</form>

<p><a href="/">home page</a></p>