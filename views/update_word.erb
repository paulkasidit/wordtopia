<h1>Update a word here</h1>

<h3>Update <%= @word.word %></h3>

<form action="/word/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="update_word">Edit word:</label>
  <input id="update_word" name="update_word" type="text" required>
  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/word/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete word</button>
</form>

<p><a href="/">home page</a></p>