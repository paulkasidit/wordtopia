<h3>Edit definition: <%= @definition.definition%></h3>

<form action="/word/<%= @word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="new_definition">Change definition:</label>
  <input id="new_definition" name="new_definition" type="text" required>

  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/word/<%= @word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete definition</button>
</form>

<p><a href="/word/<%= @word.id %>">Return to your word</a></p>